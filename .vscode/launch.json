    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Nuke Build",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder:SDL2Sharp}/build/Build/bin/Debug/Build.exe",
            "args": [ "--target", "${input:NukeBuildTargets}" ],
            "cwd": "${workspaceFolder:SDL2Sharp}/build/Build/bin/Debug",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Launch AverageFrameRate",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder:SDL2Sharp}/artifacts/bin/samples/AverageFrameRate/Debug/net6.0/AverageFrameRate",
